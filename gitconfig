[user]
	name = Fredrik Sommar
[commit]
	gpgsign = true
[push]
	default = simple
[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	branch = auto
	diff = auto
	status = auto
	ui = true
[alias]
	st = status -sb
	ci = commit
	br = branch
	co = checkout
	df = diff
	ready = rebase -i @{u}
	lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	purr = pull --rebase
	d = difftool
	patch = !git --no-pager diff --no-color
	prepare-squash = !git reset $(git merge-base master $(git rev-parse --abbrev-ref HEAD))
	undo = reset HEAD@{1}
	pu = push -u origin HEAD
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[url "git@ghe.spotify.net:"]
	insteadOf = https://ghe.spotify.net/
[url "git@github.com:"]
	insteadOf = https://github.com/

[includeIf "gitdir:~/projects/ghe.spotify.net/"]
  path = .gitconfig.d/ghe.spotify.net
[includeIf "gitdir:~/projects/github.com/"]
  path = .gitconfig.d/github.com
